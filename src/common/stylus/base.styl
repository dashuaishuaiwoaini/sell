body {
    line-height: 1
    font-family: 'PingFang SC','STHeitiSE-Light', 'Helvetica-Light', sans-serif, Arial
}

.clearfix {
    display: inline-block
    &:after {
        content: ''
        display: block
        clear: both
    }
}

// 1.5dpr
@media
(-webkit-min-device-pixel-ratio: 1.5), (min-device--pixel-ratio: 1.5) {
    .border-1px {
        &::after {
            transform: scaleY(0.7)
        }
    }
}

// 2dpr
@media
(-webkit-min-device-pixel-ratio: 2), (min-device--pixel-ratio: 2) {
    .border-1px {
        &::after {
            transform: scaleY(0.5)
        }
    }
}

// 3dpr
@media
(-webkit-min-device-pixel-ratio: 3), (min-device--pixel-ratio: 3) {
    .border-1px {
        &::after {
            transform: scaleY(0.33)
        }
    }
}